<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarahrobinson.finalyearproject.fragments.EventFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/eventHeader"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:background="@drawable/border_bottom"
            android:backgroundTint="@color/lightGrey">

            <EditText
                android:id="@+id/txtEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EVENT NAME"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/grey"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/txtEventDsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Write a description here"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/grey"
                android:textStyle="italic"
                android:textAlignment="center"/>


        </LinearLayout>

        <!-- Date & Time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:padding="6dp"
                android:src="@drawable/ic_time_24dp"
                android:tint="@color/colorPrimary" />

            <EditText
                android:id="@+id/txtEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Date and Time"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/grey" />

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:background="@drawable/border_bottom"
            android:backgroundTint="@color/lightGrey">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:padding="6dp"
                android:src="@drawable/ic_menu_location_24dp"
                android:tint="@color/colorPrimary" />

            <EditText
                android:id="@+id/txtEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Location"
                android:textColorHint="@color/lightGrey"
                android:textColor="@color/grey" />

        </LinearLayout>

        <!-- Invitees -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:background="@drawable/border_bottom"
            android:backgroundTint="@color/lightGrey">

            <TextView
                android:id="@+id/tvWhosGoingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHOS GOING"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Invite friends"
                android:textColor="@color/white"
                android:onClick="selectEventInvitees"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/eventButtonSaveEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/eventButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
