<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarahrobinson.finalyearproject.fragments.FriendsFragmentTabFriends">

    <!--  Friends layout (inflated with list item layouts) -->
    <LinearLayout
        android:id="@+id/layoutFriendsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- message to show if no friends -->
    <TextView
        android:id="@+id/txtNoFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textSize="18dp"
        android:textColor="@color/lightGrey"
        android:textAlignment="center"
        android:text="Your friends list is empty. Start adding friends now!"
        />

</FrameLayout>
