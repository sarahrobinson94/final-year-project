<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarahrobinson.finalyearproject.HomeFragment">

    <!-- section 1 -->
    <LinearLayout
        android:id="@+id/layoutHomeSection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/border_lightgrey_bottom">

        <!-- option breakfast -->
        <RelativeLayout
            android:id="@+id/optionBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionBreakfast"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Breakfast"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option lunch -->
        <RelativeLayout
            android:id="@+id/optionLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionLunch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_dining_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Lunch"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option dinner -->
        <RelativeLayout
            android:id="@+id/optionDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionDinner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_pizza_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Dinner"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option drinks -->
        <RelativeLayout
            android:id="@+id/optionDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionDrinks"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_bar_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionDrinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Drinks"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- select all -->
        <RelativeLayout
            android:id="@+id/optionAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_tick_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="All"
                style="@style/textHome"/>

        </RelativeLayout>


    </LinearLayout>

    <!-- section 2 -->
    <LinearLayout
        android:id="@+id/layoutHomeSection2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layoutHomeSection1"
        android:paddingRight="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:background="@drawable/border_lightgrey_bottom">

        <ImageView
            android:id="@+id/imageViewHomeLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_location_24dp"
            android:tint="@color/colorPrimary" />

        <EditText
            android:id="@+id/editTextHomeLocation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="7"
            android:background="@drawable/border_grey_bottom"
            android:hint="Enter a location"
            android:textSize="16dp"
            android:textColor="@color/grey"/>

    </LinearLayout>

</RelativeLayout>
