<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sarahrobinson.finalyearproject.HomeFragment">

    <!-- section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- option -->
        <RelativeLayout
            android:id="@+id/optionBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionBreakfast"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionBreakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Breakfast"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option -->
        <RelativeLayout
            android:id="@+id/optionLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionLunch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Lunch"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option -->
        <RelativeLayout
            android:id="@+id/optionDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionDinner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionDinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Dinner"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option -->
        <RelativeLayout
            android:id="@+id/optionDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionDrinks"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionDrinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="Drinks"
                style="@style/textHome"/>

        </RelativeLayout>

        <!-- option -->
        <RelativeLayout
            android:id="@+id/optionAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewOptionAll"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cup_24dp"
                android:tint="@color/grey"
                android:background="@drawable/circle_white_border_grey"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/textViewOptionAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:text="All"
                style="@style/textHome"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
