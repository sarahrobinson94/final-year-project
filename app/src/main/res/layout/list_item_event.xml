<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:background="@drawable/border_bottom"
        android:backgroundTint="@color/lightGrey">

        <TextView
            android:id="@+id/eventsListItemId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/eventsListItemDateWrap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/eventsListItemDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Date"/>

            <TextView
                android:id="@+id/eventsListItemTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Time" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventsListItemDscWrap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/eventsListItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Name"/>

            <TextView
                android:id="@+id/eventsListItemLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="Location"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventsListItemBtnWrap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center">

            <Button
                android:id="@+id/eventsListItemBtnMore"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_chevron_right_24dp"
                android:backgroundTint="@color/grey"
                android:onClick="eventOnClick"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>